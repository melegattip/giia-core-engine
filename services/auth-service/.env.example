# =============================================================================
# Auth Service - Environment Configuration
# =============================================================================
# This file contains environment variables specific to the Auth Service.
#
# SETUP INSTRUCTIONS:
# 1. Copy this file: cp .env.example .env
# 2. Update sensitive values (JWT_SECRET, passwords, etc.)
# 3. Never commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=localhost
PORT=8081
ENVIRONMENT=development
READ_TIMEOUT=10
WRITE_TIMEOUT=10

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Use schema-based approach with shared PostgreSQL instance
DB_HOST=localhost
DB_PORT=5432
DB_USER=giia
DB_PASSWORD=giia_dev_password
DB_NAME=giia_dev
DB_SCHEMA=auth
DB_SSLMODE=disable

# Alternative: Connection string format
# DATABASE_URL=postgresql://giia:giia_dev_password@localhost:5432/giia_dev?search_path=auth

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=giia_redis_password
REDIS_DB=0

# Alternative: Connection string format
# REDIS_URL=redis://:giia_redis_password@localhost:6379/0

# -----------------------------------------------------------------------------
# NATS Configuration
# -----------------------------------------------------------------------------
NATS_URL=nats://localhost:4222

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=dev_secret_change_in_production_!!!
JWT_ACCESS_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7
JWT_ISSUER=giia-auth-service

# -----------------------------------------------------------------------------
# Email Configuration (for production)
# -----------------------------------------------------------------------------
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@giia.local
FROM_NAME=GIIA Platform

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
RATE_LIMIT_PER_MIN=60

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json