# =============================================================================
# DDMRP Engine Service - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=localhost
PORT=8083
ENVIRONMENT=development
READ_TIMEOUT=30
WRITE_TIMEOUT=30

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=giia
DB_PASSWORD=giia_dev_password
DB_NAME=giia_dev
DB_SCHEMA=ddmrp
DB_SSLMODE=disable

# Alternative: Connection string format
# DATABASE_URL=postgresql://giia:giia_dev_password@localhost:5432/giia_dev?search_path=ddmrp

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=giia_redis_password
REDIS_DB=2

# Alternative: Connection string format
# REDIS_URL=redis://:giia_redis_password@localhost:6379/2

# -----------------------------------------------------------------------------
# NATS Configuration
# -----------------------------------------------------------------------------
NATS_URL=nats://localhost:4222

# -----------------------------------------------------------------------------
# gRPC Configuration
# -----------------------------------------------------------------------------
GRPC_PORT=9083

# -----------------------------------------------------------------------------
# DDMRP Specific Configuration
# -----------------------------------------------------------------------------
# Calculation engine settings
CALCULATION_TIMEOUT=60
MAX_BUFFER_POSITIONS=10000

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json