# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/analytics_db?sslmode=disable

# Server Configuration
GRPC_PORT=50053
HTTP_PORT=8083

# Service Clients (for future integration)
CATALOG_SERVICE_URL=localhost:50051
DDMRP_SERVICE_URL=localhost:50052
EXECUTION_SERVICE_URL=localhost:50054

# NATS Configuration (for future event consumers)
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=giia-cluster

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# KPI Calculation Schedule (for future cron jobs)
KPI_CALCULATION_SCHEDULE=0 3 * * *  # Daily at 3 AM
BUFFER_SYNC_SCHEDULE=0 */6 * * *     # Every 6 hours

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false

# Feature Flags
ENABLE_EVENT_CONSUMERS=false
ENABLE_DAILY_KPI_JOBS=false
